<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1f1f1d"
    android:orientation="vertical"
    tools:context=".Splash">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/first"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/white_line" />

        <View
            android:id="@+id/sec"
            android:layout_width="20dp"
            android:layout_height="85dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/first"
            android:background="@drawable/red_line" />

        <View
            android:id="@+id/third"
            android:layout_width="20dp"
            android:layout_height="180dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/sec"
            android:background="@drawable/white_line" />

        <View
            android:id="@+id/forth"
            android:layout_width="20dp"
            android:layout_height="110dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/third"
            android:background="@drawable/red_line" />

        <View
            android:id="@+id/fifth"
            android:layout_width="20dp"
            android:layout_height="140dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/forth"
            android:background="@drawable/green_line" />

        <View
            android:id="@+id/sixth"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/fifth"
            android:background="@drawable/white_line" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/logo"
            android:layout_width="230dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:background="@drawable/logo" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/felipa"
            android:text="Family of Friends"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold"
            android:id="@+id/tagLine"/>
    </RelativeLayout>
</LinearLayout>
</LinearLayout>